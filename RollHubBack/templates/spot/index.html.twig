{% extends 'base.html.twig' %}

{% block title %}Spot index{% endblock %}

{% block body %}
    <h1>Spot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spot in spots %}
            <tr>
                <td>{{ spot.id }}</td>
                <td>{{ spot.latitude }}</td>
                <td>{{ spot.longitude }}</td>
                <td>{{ spot.name }}</td>
                <td>
                    <a href="{{ path('app_spot_show', {'id': spot.id}) }}">show</a>
                    <a href="{{ path('app_spot_edit', {'id': spot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_spot_new') }}">Create new</a>
{% endblock %}
