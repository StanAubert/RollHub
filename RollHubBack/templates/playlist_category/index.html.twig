{% extends 'base.html.twig' %}

{% block title %}PlaylistCategory index{% endblock %}

{% block body %}
    <h1>PlaylistCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for playlist_category in playlist_categories %}
            <tr>
                <td>{{ playlist_category.id }}</td>
                <td>{{ playlist_category.title }}</td>
                <td>{{ playlist_category.color }}</td>
                <td>
                    <a href="{{ path('app_playlist_category_show', {'id': playlist_category.id}) }}">show</a>
                    <a href="{{ path('app_playlist_category_edit', {'id': playlist_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_playlist_category_new') }}">Create new</a>
{% endblock %}
